---
import GithubIcon from "../icons/github-icon.astro";
import LinkedinIcon from "../icons/linkedin-icon.astro";
---

<section class="mx-auto max-w-screen-md px-4">
  <div
    class="flex flex-col gap-5 py-32 duration-700 animate-in fade-in-0 slide-in-from-left-12"
  >
    <div class="flex flex-col gap-1">
      <p class="font-jetbrains font-bold leading-[1] text-neutral-400">
        /* <span class="tracking-tight">Fullstack Developer</span> */
      </p>
      <h1 class="w-min text-7xl font-extrabold leading-[0.85] tracking-tight">
        Santiago Garc√≠a<span class="text-purple-500">;</span>
      </h1>
    </div>
    <p class="max-w-[400px] text-pretty text-neutral-400">
      An Uruguayan Fullstack Developer with a passion for crafting digital
      experiences and solving complex problems.
    </p>
    <div class="flex items-center gap-2">
      <a
        href="#projects"
        class="grid w-full rounded bg-gradient-to-t from-purple-900 to-purple-500 px-4 py-2 text-center font-jetbrains font-bold transition-[filter] hover:brightness-75 sm:w-fit"
      >
        getProjects()
      </a>
      <a
        aria-label="Github Icon"
        target="_blank"
        href="https://github.com/yusborinchit"
        class="rounded-full ring-purple-500 transition-transform hover:scale-110 hover:ring-2 focus:ring-2"
      >
        <GithubIcon width={36} height={36} />
      </a>
      <a
        aria-label="LinkedIn Icon"
        target="_blank"
        href="https://www.linkedin.com/in/santiago-garcia-387696253/"
        class="rounded ring-purple-500 transition-transform hover:scale-110 hover:ring-2"
      >
        <LinkedinIcon width={36} height={36} />
      </a>
    </div>
  </div>
</section>
